<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
</head>

<body>
    <div id ="logo" class="img-circle"><img src="~/images/Csharp_Logo.png" alt="C# logo" /></div>
    <div class="topnav">
        <ul>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Projects", "Projects", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li>@Html.ActionLink("Guessing game", "GuessingGame", "GuessingGame")</li>
            <li>@Html.ActionLink("Fever check", "Fever", "FeverCheck")</li>
            @if (User.Identity.IsAuthenticated)
            {
                <li>@Html.ActionLink("Persons", "Persons", "Persons")</li>
                <li>@Html.ActionLink("AJAX", "Index", "AJAXPersons")</li>
                if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                    <li>@Html.ActionLink("Cities", "Index", "Cities")</li>
                    <li>@Html.ActionLink("Languages", "Index", "Language")</li>
                    <li>@Html.ActionLink("Users", "Index", "User")</li>
                }

            }
            <partial name="_LoginPartial" />

        </ul>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.ToShortDateString() - Jonas Carlsson</p>
        </footer>
    </div>
    @RenderSection("Scripts", required:false)
</body>
</html>
