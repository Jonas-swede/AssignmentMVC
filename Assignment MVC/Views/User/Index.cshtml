@model UserViewModel
<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <td>User id</td>
            <td>Username</td>
            <td>First name</td>
            <td>Last name</td>
            <td>Roles</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Users)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>
                    @if (item.Roles.Count > 0)
                    {
                        foreach(var role in item.Roles)
                        {
                            @role<br />
                        }
                    }
                    <hr />

                    <form asp-action="AddRole">
                        <div class="form-group">
                            <label class="control-label">Select role to add</label>
                            <select asp-for="NewRole" class="form-control" asp-items="ViewBag.Roles"></select>
                        </div>
                        <input type="hidden" asp-for="@item.Id" name="UserId"/>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </td>
            </tr>
                
            }
    </tbody>
</table>

<h1>Roles</h1>
<table class="table">
    <thead>
        <tr>
            <td>Role id</td>
            <td>Rolename</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    
                </tr>
            }
    </tbody>
</table>

